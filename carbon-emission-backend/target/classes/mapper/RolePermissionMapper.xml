<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjfu.carbon.mapper.RolePermissionMapper">

    <!-- 获取角色的权限ID列表 -->
    <select id="getPermissionIdsByRoleId" resultType="java.lang.Long">
        SELECT permission_id
        FROM role_permission
        WHERE role_id = #{roleId}
    </select>

    <!-- 批量插入角色权限关联 -->
    <insert id="insertRolePermissions">
        INSERT INTO role_permission (role_id, permission_id, created_time)
        VALUES
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (#{roleId}, #{permissionId}, NOW())
        </foreach>
        ON DUPLICATE KEY UPDATE role_id=VALUES(role_id)
    </insert>

    <!-- 删除角色的所有权限关联 -->
    <delete id="deleteByRoleId">
        DELETE FROM role_permission
        WHERE role_id = #{roleId}
    </delete>

    <!-- 删除权限的所有角色关联 -->
    <delete id="deleteByPermissionId">
        DELETE FROM role_permission
        WHERE permission_id = #{permissionId}
    </delete>

    <!-- 删除角色的指定权限关联 -->
    <delete id="deleteByRoleIdAndPermissionIds">
        DELETE FROM role_permission
        WHERE role_id = #{roleId}
        AND permission_id IN
        <foreach collection="permissionIds" item="permissionId" open="(" separator="," close=")">
            #{permissionId}
        </foreach>
    </delete>

</mapper>

